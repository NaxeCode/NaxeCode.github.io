---
import HeaderLink from './HeaderLink.astro';
import { NAME } from '../consts';
---

<header
	class="text-center p-7 border-solid border-4 rounded-md border-white bg-background shadow-lg"
>
	<nav>
		<img
			src=`https://github.com/naxecode.png`
			alt="GitHub Profile Picture"
			width="150"
			height="150"
			class="rounded-full mx-auto mb-4 border-4 border-white shadow-lg shadow-green-950"
		/>
		<div class="pb-0 pt-0">
			<h2 class="font-bold">
				<a class="drop-shadow-lg" href="/">{NAME}</a>
			</h2>
			<p class="font-thin drop-shadow-lg">Software Engineer</p>
		</div>
		<div>
			<HeaderLink class="font-bold text-xl drop-shadow-lg" href="/about"
				>About</HeaderLink
			>
			<p class="font-light text-sm">Education, Experience, Skills</p>
			<HeaderLink class="font-bold text-xl drop-shadow-lg" href="/projects"
				>Portfolio</HeaderLink
			>
			<p class="font-light text-sm">Project Showcase</p>
			<HeaderLink class="font-bold text-xl drop-shadow-lg" href="/blog"
				>Articles</HeaderLink
			>
			<p class="font-light text-sm">Technical Writeups</p>
