{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js dev (Turbopack)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Next.js dev (no turbo)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --no-turbo",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Next.js dev with inspect (Turbopack)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      }
    },
    {
      "name": "Attach to Next.js (inspect:9229)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "cwd": "${workspaceFolder}",
      "address": "localhost"
    }
  ]
}
